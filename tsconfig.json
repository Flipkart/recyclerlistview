{
  "compilerOptions": {
    "lib": ["es6", "dom"], // target Node.js(v6)
    "types": ["react", "react-native"],
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true, // generate TypeScript definitions
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true // to import a single function like lodash/debounce which is not a default export
  }
}
